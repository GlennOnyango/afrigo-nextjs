generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum EntityType {
  CHINESE_BUSINESS
  KENYAN_BUSINESS
  SERVICE_PARTNER
  OTHER
}

enum QuoteNeed {
  LOGISTICS
  STAFFING
  WAREHOUSING
  OFFICE_SPACE
  LEGAL_SUPPORT
  TRANSACTION
}

model Entity {
  id                     String     @id @default(cuid())
  fullName               String
  weChatId               String
  emailAddress           String     @unique
  entityType             EntityType
  additionalRequirements String?    @db.Text
}

model Partner {
  id                         String  @id @default(cuid())
  companyName                String
  contactPerson              String
  position                   String
  phoneOrEmail               String  @unique
  businessCategory           String
  yearsInOperation           Int
  location                   String
  businessRegistrationNumber String
  website                    String?
  servicesOffered            String  @db.Text
  reason                     String  @db.Text
  cleared                    Boolean @default(false)
}

model Promoter {
  id          String  @id @default(cuid())
  fullName    String
  email       String  @unique
  phoneNumber String
  weChatId    String?
  promotePlan String  @db.Text
  cleared     Boolean @default(false)
}

model Service {
  id                 String        @id @default(cuid())
  serviceName        String
  serviceDescription String        @db.Text
  actionText         String
  serviceItems       ServiceItem[]
}

model ServiceItem {
  id          String @id @default(cuid())
  serviceId   String
  serviceItem String

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}

model Quote {
  id                     String    @id @default(cuid())
  fullName               String
  weChatId               String
  companyName            String?
  industry               String
  needs                  QuoteNeed
  expectedEntryDate      DateTime
  additionalRequirements String?   @db.Text
}

model Contact {
  id           String @id @default(cuid())
  emailAddress String
  phoneNumber  String
  wechatId     String
  subject      String
  message      String @db.Text
}

model Soultions {
  id                 String @id @default(cuid())
  consultingServices String
  investorService    String
  fullName           String
  wechatId           String
  emailAddress       String
  companyName        String
  industry           String
  budgetRange        String
  timeLine           String
  details            String @db.Text
}
